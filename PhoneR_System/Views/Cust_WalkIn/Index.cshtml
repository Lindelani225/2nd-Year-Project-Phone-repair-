@model IEnumerable<PhoneR_System.Models.Cust_WalkIn>

@{
    ViewBag.Title = "Index";
}
<!DOCTYPE html>
<html lang="en">
@Html.AntiForgeryToken()



<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">


    <meta content="" name="descriptison">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="~/Content/assets/img/favicon.png" rel="icon">
    <link href="~/Content/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/Content/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/assets/vendor/icofont/icofont.min.css" rel="stylesheet">
    <link href="~/Content/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/Content/assets/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="~/Content/assets/vendor/venobox/venobox.css" rel="stylesheet">
    <link href="~/Content/assets/vendor/owl.carousel/assets/owl.carousel.min.css" rel="stylesheet">

    <link href="~/Content/assets/css/style.css" rel="stylesheet">


    <style>
        .logoutbtn{
            color:white;
            background-color:green;
            border-radius:5px;
        }
    </style>

</head>
<body>
    <header id="header" class="fixed-top header-inner-pages">
        <div class="container-fluid">
            <div>
                <div class="col-xl-9 d-flex align-items-center justify-content-between">
                    <a href="#" class="logo"><img src="~/Content/assets/img/logo.png" alt="" class="img-fluid"></a>
                    <h1 class="logo"><a href="#">Shadrak's Repair</a></h1>

                    <a href="index.html" class="logo"><img src="assets/img/logo.png" alt="" class="img-fluid"></a>

                    <nav class="nav-menu d-none d-lg-block">
                        <ul>
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li class="drop-down">
                                <a href="">Services</a>
                                <ul>
                                    <li>@Html.ActionLink("Request Pick-Up Device", "Index", "Cust_Request")</li>
                                    <li>@Html.ActionLink("Book of Walk-In Appointment", "Index", "Cust_WalkIn")</li>

                                </ul>
                            </li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>

                        </ul>
                       
                    </nav><!-- .nav-menu -->
                    <div>
                        @Html.ActionLink("Log out", "Index", "Home","1", htmlAttributes: new { @class = "get-started-btn scrollto" })
                    </div>
                    @*@Html.ActionLink("Log out", "Index", "Home")*@
                    
                </div>
            </div>

        </div>

    </header><!-- End Header -->





    <div class="form-horizontal" style="margin-top:7.5em">

        <h4><b>Customer Request WalkIn or Appointment</b></h4>
        <hr />

        <h2><b>Request in place</b></h2>
        
        <table class="table">
            <tr>
               
                <th>
                    @Html.DisplayNameFor(model => model.Walkin_Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Walkin_Time)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IMEI_Num)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.B_Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Color.C_Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Device.Brand_Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Operating_Sy.Device_os)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProblemDesc.Problem_Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.storage.Storg_Name)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
        <tr>
          
            <td>
                @Html.DisplayFor(modelItem => item.Walkin_Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Walkin_Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IMEI_Num)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.B_Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color.C_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Device.Brand_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Operating_Sy.Device_os)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProblemDesc.Problem_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.storage.Storg_Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Walk_Id }, htmlAttributes: new { @style = "color:green" }) |
                @Html.ActionLink("Details", "Details", new { id = item.Walk_Id }, htmlAttributes: new { @style = "color:green" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Walk_Id }, htmlAttributes: new { @style = "color:red" })
            </td>
        </tr>
            }
            

        </table>
        </div>
    </body>
</html>
